<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    app:flow_horizontalAlign="center">

    <ImageView
        android:id="@+id/imageTitleSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/create_account_removebg_preview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTitleSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/heading_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        android:textColor="#5CAD5C"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageTitleSlider" />

    <TextView
        android:id="@+id/descriptiontSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/desc_one"
        android:textAlignment="center"
        android:textColor="#5CAD5C"
        android:textSize="16sp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitleSlider" />

</androidx.constraintlayout.widget.ConstraintLayout>